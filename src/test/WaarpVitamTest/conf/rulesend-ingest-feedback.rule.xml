<rule>
	<idrule>send-ingestfeedback</idrule>
	<mode>1</mode>
	<recvpath></recvpath>
	<sendpath></sendpath>
	<archivepath></archivepath>
	<workpath></workpath>
	<rposttasks>
		<tasks>
			<task>
				<type>LOG</type>
				<path>here comes when feedback is done: fileinfo starts always with the
					IngestId, then either
					INGEST_ID: content is Ingest Id,
					ATR_FAILED: content is a early failed ATR,
					ATR: content is the ATR of ingest</path>
				<delay>0</delay>
				<rank>0</rank>
			</task>
			<task>
				<type>LOG</type>
				<path>Note: since postfix of fileinfo is separated, one can use
					the very same rule for sending back Ingest or Dip results</path>
				<delay>0</delay>
				<rank>0</rank>
			</task>
		</tasks>
	</rposttasks>
	<rerrortasks>
		<tasks>
			<task>
				<type>LOG</type>
				<path>error during transmission</path>
				<delay>1</delay>
				<rank>0</rank>
			</task>
		</tasks>
	</rerrortasks>
	<serrortasks>
		<tasks>
			<task>
				<type>LOG</type>
				<path>error during transmission</path>
				<delay>1</delay>
				<rank>0</rank>
			</task>
		</tasks>
	</serrortasks>
</rule>