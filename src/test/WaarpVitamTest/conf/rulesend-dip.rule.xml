<rule>
	<idrule>send-dip</idrule>
	<mode>1</mode>
	<recvpath></recvpath>
	<sendpath></sendpath>
	<archivepath></archivepath>
	<workpath></workpath>
	<rposttasks>
		<tasks>
			<task>
				<type>LOG</type>
				<path>one or the other: EXECJAVA or EXEC</path>
				<delay>0</delay>
				<rank>0</rank>
			</task>
			<task>
				<type>EXECJAVA</type>
				<path>org.waarp.vitam.dip.DipTask$JavaTask -o %ROOT%/conf/config-dip.property -w %ROOT%/conf/config-clientSubmitA.xml -f #TRUEFULLPATH#</path>
				<delay>0</delay>
				<rank>1</rank>
			</task>
			<taskno>
				<type>EXEC</type>
				<path>java -cp %ROOT%/bin/Waarp-Vitam-Ingest-3.2.0-jar-with-dependencies.jar -Dvitam.tmp.folder=%ROOT%/work -Dvitam.config.folder=%ROOT%/conf/vitam -Dvitam.data.folder=%ROOT%/data -Dvitam.log.folder=%ROOT%/log org.waarp.vitam.dip.DipTask -o %ROOT%/conf/config-ingest.property -w %ROOT%/conf/config-clientSubmitA.xml -f #TRUEFULLPATH#</path>
				<delay>0</delay>
				<rank>1</rank>
			</taskno>
		</tasks>
	</rposttasks>
	<rerrortasks>
		<tasks>
			<task>
				<type>LOG</type>
				<path>error of transmission</path>
				<delay>1</delay>
				<rank>0</rank>
			</task>
		</tasks>
	</rerrortasks>
	<sposttasks>
		<tasks>
			<task>
				<type>LOG</type>
				<path>here comes post task when send is done</path>
				<delay>0</delay>
				<rank>0</rank>
			</task>
		</tasks>
	</sposttasks>
	<serrortasks>
		<tasks>
			<task>
				<type>LOG</type>
				<path>error of transmission</path>
				<delay>1</delay>
				<rank>0</rank>
			</task>
		</tasks>
	</serrortasks>
</rule>
